
extends ../../layout.jade
block contenido

		div(class="row justify-content-md-center big-top-space")
				
				
					div(class="col-md-12 text-center")
						h1 Editar Imagen
				
				
					div(class="col-md-6")

						form(action="/app/imagenes/#{imagen.id}?_method=PUT", method="POST")

							div(class="form-group")
								label(for="title") Titulo
								input(type="text", name="title", placeholder="title", id="title", class="form-control", value="#{imagen.title}")

							div(form-group)
								label(for="image") Imagen
								input(type="file", name="image", id="image", class="form-control")

							div(class="row big-top-btn")
								div(class="col-md-6")
									input(type="submit", class="btn btn-primary")